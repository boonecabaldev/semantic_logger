<h1>Posts</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Creation Date</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @posts.each do |post| %>
            <tr>
                <td><%= post.title %></td>
                <td><%= post.content %></td>
                <td><%= post.creation_dt.strftime("%B %d, %Y") if post.creation_dt.present? %></td>
                <td><%= post.category.title %></td>
                <td>
                    <%= link_to 'Edit', edit_post_path(post) %> |
                    <%= button_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, form: { style: 'display: inline;' } %>

                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'New Post', new_post_path %>